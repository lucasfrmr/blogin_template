doctype html
html
	head
		title #{title}
		link(rel='stylesheet' href='/bower_components/semantic/dist/semantic.min.css')
		link(rel='stylesheet' href='/css/style.css')
	body
		.ui.container.center.aligned
			.ui.menu
				if user
					.header.item #{user.name}
				a.item(href='/') Home
				if user
					a.item(href='/posts/add') Add Posts
				.right.menu
					if user
						a.item(href='/users/logout') Logout
					else
						a.item(href='/users/register') Register
						a.item(href='/users/login') Login
				//- a.item(href='')
		.ui.container.center.aligned
			br
			!= messages('message', locals)
			if errors
				each error, i in errors
					.ui.negative.message
						// i.close.icon
						.header #{error.msg}
			block content
			br
			hr
			footer
				p Copywrong &copy; 2017
		script(src='/bower_components/jquery/dist/jquery.min.js')
		script(src='/bower_components/semantic/dist/semantic.min.js')
		script(src='/js/main.js')